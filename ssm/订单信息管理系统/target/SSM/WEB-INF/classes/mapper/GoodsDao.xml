<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cm.dao.GoodsDao">

    <insert id="insertGoods">
        insert into `goods` values (#{id}, #{name},#{price},#{content})
    </insert>

    <select id="list" resultType="com.cm.model.Goods">
        select *
        from `goods`
    </select>

    <select id="get" resultType="com.cm.model.Goods">
        select *
        from `goods`
        where `name` like  concat('%',concat(#{name},'%'))
    </select>

    <select id="getById" resultType="com.cm.model.Goods">
        select *
        from `goods`
        where `id` = #{id}
    </select>

    <delete id="delete">
        delete from `goods`
        where id = #{id}
    </delete>

    <update id="update">
        update `goods`
        set `name` =#{name},price=#{price},content = #{content}
        where id = #{id}
    </update>
</mapper>