<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cm.dao.FoodsDao">

    <insert id="insert">
        insert into `foods` values (#{id}, #{name},#{count},#{content})
    </insert>

    <select id="list" resultType="com.cm.model.Foods">
        select *
        from `foods`
    </select>

    <select id="get" resultType="com.cm.model.Foods">
        select *
        from `foods`
        where `name` like  concat('%',concat(#{name},'%'))
    </select>

    <select id="getById" resultType="com.cm.model.Foods">
        select *
        from `foods`
        where `id` = #{id}
    </select>

    <delete id="delete">
        delete from `foods`
        where id = #{id}
    </delete>

    <update id="update">
        update `foods`
        set `name` =#{name},`count`=#{count},content = #{content}
        where id = #{id}
    </update>
</mapper>