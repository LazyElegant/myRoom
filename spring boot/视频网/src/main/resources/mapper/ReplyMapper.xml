<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bobo.test.mapper.ReplyMapper">
    <insert id="addReply">
        insert into reply
        VALUES (#{id},#{point},#{context},#{creation_time},#{user_id},#{comment_id})
    </insert>
    <select id="listReplyByCommentId" resultType="Reply">
        SELECT *
        FROM reply
        WHERE comment_id = #{id}
        ORDER BY creation_time
    </select>
    <select id="listReply" resultType="Reply">
        SELECT *
        FROM reply
        ORDER BY creation_time
    </select>
    <delete id="deleteReply">
        DELETE FROM reply
        WHERE id = #{id}
    </delete>
    <delete id="deleteReplyByCommentId">
        DELETE FROM reply
        WHERE comment_id = #{id}
    </delete>
</mapper>