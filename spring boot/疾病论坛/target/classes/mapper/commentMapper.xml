<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bobo.test.mapper.commentMapper">

    <select id="queryCommentById" parameterType="int" resultType="comment">
        select * from comment where forum_id = #{id}
    </select>

    <insert id="addComment" parameterType="comment">
        insert into comment
        values(#{id},#{forum_id},#{user_id},#{creation_time},#{content});
    </insert>

    <delete id="deleteComment">
        delete from comment where forum_id = #{id};
    </delete>
</mapper>