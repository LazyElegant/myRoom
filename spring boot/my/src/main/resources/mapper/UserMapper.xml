<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bobo.test.mapper.UserMapper">

    <select id="queryUserByNum" parameterType="String" resultType="User">
        select * from user where user_num = #{user_num}
    </select>

    <select id="queryUserByStatus" resultType="User">
        select * from user where Status = 1
    </select>

    <insert id="addUser" parameterType="User">
		insert into user(user_num,user_name,user_password,user_email,registration_date,status)
		values(#{user_num},#{user_name},#{user_password},#{user_email},#{registration_date},1);
	</insert>

    <update id="updateUser" >
        update `user` set user_name = #{user_name},user_email = #{user_email} where user_num = #{user_num};
    </update>

    <delete id="deteleUser">
        delete from `user` where user_num = #{user_num};
    </delete>
    <update id="updateUserPassword" >
        update `user` set user_password = #{user_password} where user_num = #{user_num};
    </update>
</mapper>